<br>
<div class="jumbotron">
  <div class="jumbotron">
    <h2><b><center>SELLER'S DASHBOARD</center></b></h2>
  </div>
  <h1><%= render partial: "layouts/property", locals: { address: @properties.first.map_address } %></h1>
  <p><center>
      <%= link_to "Create Property", new_property_path, class: 'btn btn-primary' %>
  </center></p>

<div class="row">
  <div class="col-md-6">
    <h2> <center>MY PROPERTIES</center> </h2>
    <% @properties.each do  |p| %>
      <div class="panel panel-default">
        <div class="panel-body">
        <center>
         <h4> <%= link_to p.address, property_path(p) %></h4> 
          <%= p.city + "," %>
          <%= p.state + "," %>
          <%= p.zip + ";" %>
          <b><i><%= p.description %></i></b>
          <h4> <%= link_to "Edit Listing", edit_property_path(p), class: 'btn btn-success' %></h4> 
        </center>
        </div>
      </div>
    <% end %>
  </div>

  <div class="col-md-6">
    <h2> <center>Your Next Showing</center></h2>
      
        <div class="panel panel-default">
          <div class="panel-body">
          <center>
          <ol> 
            <% @appointments.each do |a| %> 
              <li><b> <%= link_to (a.slot ? a.slot.start_time : "no slot") %> </b></li> 
            <% end %>
          </ol>
          </center>
          </div>
        </div> 
  </div>


</div>
