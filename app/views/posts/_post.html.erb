<div class="well marketing-post">

  <div class="panel-heading">
   <% if post.facebook == true %> <span class="label label-primary"> <i class="fa fa-facebook-official" aria-hidden="true"></i> Facebook</span> <% end %>
   <% if post.twitter == true %> <span class="label label-info"><i class="fa fa-twitter-square" aria-hidden="true"></i> Twitter</span> <% end %>
    <br>
   Scheduled for: <p class="footer__text"><%= post.scheduled_at.strftime("%-I:%M%p") %> <br> <%= post.scheduled_at.strftime("%B %-d, %Y") %></p>
  </div>

  <div class="panel-body">
    Message:
    <br>
    <p class="footer__text"><%= post.content %>"</p>
  </div>
  <div class="panel-footer">
    Message Status: <p class="marketing-status"><%= post.state.upcase %></p>
  </div>
</div>