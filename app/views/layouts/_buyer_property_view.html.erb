

<div class="thumbnail-small">
      <ul class="button">
      <button data-toggle="collapse" class= "btn btn-primary-listing" href="#viewfavs<%= p.id %>"><%= image_tag(p.photos.first.url, :size => "100x100") %> Open/Close</button>
      </ul>
</div>


<div class="tab-content">
  <div id="viewfavs<%=p.id %>" class="collapse">

    <div>
      <ul class="nav nav-tabs" id="myTab">
        <li><a data-toggle="tab" href="#home<%= p.id %>">Home</a></li>
        <li><a data-toggle="tab" href="#appointment<%= p.id %>">Appointments</a></li>
        <li><a data-toggle="tab" href="#questions<%= p.id %>">Property Questions</a></li>
      </ul>
    </div>





<div class="tab-content">
  <div id="home<%= p.id %>" class="tab-pane fade in active">
    <div class="panel panel-home">
        <div class="row">

          <div class="col-md-4">f
            <div class="panel -panel buyer">
                <div id="map-container">
                  <div id="map-canvas">
                    <div class="google_map">
                        <center><%= image_tag "https://maps.googleapis.com/maps/api/staticmap?center=#{p.map_address}&zoom=14&size=640x600&markers=#{p.map_address}&sensor=false" %></center>
                    </div>
                  </div>
                </div>
              </div>
          </div>

          <div class="col-md-4">
            <div class="thumbnail">
              <%= render partial: 'properties/photo', locals: {property: p} %>
            </div>
          </div>


          <div class="col-md-4">
            <h4> <%= link_to p.address, property_path(p) %></h4>
            <b><%= p.structure %></b>
            <%= p.city + "," %>
            <%= p.state + "," %>
            <%= p.zip %>
            <b><%= p.beds.to_s + " " %>Beds -</b>
            <b><%= p.baths.to_s + " " %>Baths -</b>
            <b><%= p.lot.to_s + " " %>Acres</b>

            <H3><b><i><%= "$" + p.price.to_s.scan(/(?:\d*\.)?\d{1,3}-?/).join(',') %></i></b></H3>
            <%= p.description %>


            <p> Listed <%= (Time.now.to_i - Time.at(p.created_at.to_i).to_i) /60 /60 /24 %> Days Ago </p>

            <%= render partial: 'properties/favorite', locals: {p: p} %>
          </div>
        </div>


    </div>
  </div>


  <div id="appointment<%= p.id %>" class="tab-pane fade in">
    <div class="panel panel-appointment">
        <div class="row">

          <div class="col-md-6">
            <%= render partial: 'properties/appointment', locals: {p: p, slot: @slot} %>
          </div>
          <div class="col-md-2">
            <h3>
              <center><%= "Key" %></center>
              </h3>
            <center><span class="glyphicon glyphicon-ok-circle" style="color:white"></span></center>
          </div>
          <div class="col-md-2">
            <h3>
              <center><%= "Entrance" %></center>
              </h3>
            <center><span class="glyphicon glyphicon-ok-circle" style="color:white"></span></center>
          </div>
          <div class="col-md-2">
            <h3>
              <center><%= "Exit" %></center>
              </h3>
            <center><span class="glyphicon glyphicon-remove-circle" style="color:red"></span></center>
          </div>
        </div>
    </div>
  </div>
  <div id="questions<%= p.id %>" class="tab-pane fade in">
    <div class="">
      <div class="row">
        <div class="">
          <%= render partial: 'comments/comment', locals: {p: p} %>
        </div>
      </div>
      <div class="row">
        <%= render partial: 'comments/form', locals: {p: p} %>
      </div>
    </div>
  </div>


</div>

  </div>
</div>

