<div class="row">

  <div class="col-md-4">
    <div id="map-container">
      <div id="map-canvas">
        <center><%= image_tag "https://maps.googleapis.com/maps/api/staticmap?center=#{p.map_address}&zoom=14&size=312x225&markers=#{p.map_address}&sensor=false" %></center>
      </div>
    </div>
  </div>

  <div class="col-md-2">
    <div class="thumbnail">
      <%= image_tag(p.photo.url) if p.photo? %>
    </div>
  </div>

  <div class="col-md-2">
   <h4> <%= link_to p.address, property_path(p) %></h4> 
    <%= p.city + "," %>
    <%= p.state + "," %>
    <%= p.zip + ";" %>
  </div>

  <div class="col-md-2">
    <H3><b><i><%= "$" + p.price.to_s %></i></b></H3>
    <%= p.description %>
  </div>


  <div class="col-md-1">
    <center>Next Viewing</center>
    <center><ol>
    <% @appointments.each do |a| %> 
      <li><b><%= (a.slot ? a.slot.start_time.strftime("%-I:%M%p %B %-d, %Y") : "no slot") %></b></li>
    <% end %>
    </ol></center>
  </div>

  <div class="col-md-1">
    <%= render partial: 'properties/favorite', locals: { p: p } %> 
  </div>

</div>
