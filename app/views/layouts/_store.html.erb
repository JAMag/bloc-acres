
    <div class="panel panel-marketing col-md-12">
      <p id="notice"><%= notice %></p>


        <% @products.each do |product| %>
          <div class="col-md-3">
            <div class="panel panel-default">
              <%= image_tag product.image.url, class: "profile-round" %>

              <div>
                <b><%= product.title %></b>
              </div>
              <div>
                <p><%= product.description %></p>
              </div>
              <div>
                <div class="btn btn-default btn-block">
                  <h3><%= number_to_currency(product.price, :unit => '$')%></h3>
                  <a href="/cart/<%= product.id %>"> Add To Cart </a>
                  <span class="glyphicon glyphicon-shopping-cart" style="vertical-align:middle"></span>
                </div>
              </div>

            </div>
          </div>
        <% end %>

      <div>

        <% if @cart.empty? %>
            <b>Your Cart is empty</b>
        <% else %>
            <%= link_to 'Empty Your Cart', cart_clear_path %>
        <% end %>
        <br><br><br>
        <% total = 0 %>


          <% @cart.each do | id, quantity | %>
              <% product = Product.find_by_id(id) %>
              <div class="well well-sm">
                  <li>
                    <%= link_to product.title, product %>
                    <p><%= product.description %></p>
                    <p><%= number_to_currency(product.price, :unit => '$')%></p>
                    <p>Quantity: <%= quantity %></p>
                  </li>
              </div>
              <% total += quantity * product.price %>
          <% end %>
          <div class="well well-sm">
            <p><b>Order Total: <%= number_to_currency(total, :unit => '$') %></b></p>
          </div>
          <%= form_tag charges_path do %>


              <script class='stripe-button' src="https://checkout.stripe.com/checkout.js" data-key="pk_test_cRzT97SZoD13r1a2JB1eHZH9" data-amount=<%= number_to_currency(total, :unit => '$') %> data-description="Cart"></script>
          <% end %>

      </div>

    </div>
