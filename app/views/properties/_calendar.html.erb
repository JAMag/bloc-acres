<div class="col-md-12">
  <div class="panel panel-default calendar-container">


    <% if p.slots %>
        <%= week_calendar events: p.slots, number_of_weeks: 1 do |date, slots| %>
            <b><%= date.strftime("%d") %></b>


            <div class="row">
              <%= form_for :slot, url: by_day_property_slots_path(p, date), method: :delete do |f| %>
                  <%= f.submit "Delete Day", class: 'btn btn-danger btn-xs', data: {confirm: "Are you sure?"} %>
              <% end %>
            </div>

            <div class="row">
              <% slots.each do |slot| %>
                  <div>
                    <%= link_to slot.starts_at.strftime("%l:%M%p"), property_slot_path(slot.property, slot), method: :delete, data: {confirm: "Are you sure?"} %>
                  </div>
              <% end %>
            </div>
        <% end %>

    <% else %>
        No Slots
    <% end %>
  </div>
</div>


