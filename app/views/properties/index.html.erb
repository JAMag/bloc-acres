<div class="jumbotron">
  <h1>
    <center><b>PROPERTIES</b></center>
  </h1>
  <div class="panel panel-appointment">
    <div class="container-fluid">
      <%= form_tag properties_path, method: :get, id: 'search-field', class: "navbar-form navbar-left", role: 'search' do %>
          <%= select_tag 'search[structure]', options_for_select([['Structure',''],['Townhome', 'Townhome'], ['Condo', 'Condo'], ['House', 'House'], ['Multi-family', 'Multi-Family']], params[:search][:structure]) %>
          <%= select_tag 'search[price]', options_for_select([['Price', ''], ['100000', '100000'], ['200000', '200000'], ['300000', '300000']], params[:search][:price])%>
          <%= select_tag 'search[beds]', options_for_select([['Beds', ''], ['1', '1'], ['2', '2']], params[:search][:beds])%>
          <%= select_tag 'search[baths]', options_for_select([['Baths', ''], ['1', '1'], ['1.5', '1.5'], ['2', '2'], ['2.5', '2.5']], params[:search][:baths]) %>
          <% button_tag type: 'submit', class: 'btn btn-default' do %>
          <% end %>
      <% end %>
    </div>
  </div>
</div>


<% @properties.each do |p| %>
    <div class="jumbotron">
      <%= render partial: "layouts/buyer_property_view", locals: {p: p} %>
    </div>
<% end %>





<script>

    $(function() {
    $('#search-field').change(function() {
    $('form').submit();
    });
    });
</script>
