<style>
    .large-house-photo {
        position: relative;
        background-color: rgb(229, 227, 223);
        overflow: hidden;
        width: 100%;
        margin: auto;
        height:400px;
    }


</style>

<% @title= @property.address %>

<div class="">

  <div>

    <div>
      <div>
        <div>
            <h1 style="text-align: center; text-transform: uppercase;"><%= @property.address %></h1>
            <h1><b><i><%= "$" + @property.price.to_s.scan(/(?:\d*\.)?\d{1,3}-?/).join(',') %></i></b></h1>
        </div>
        <div>
            <h4><i class="fa fa-map-marker" aria-hidden="true" style="color: #29abe3;"></i> <%= @property.city%>, <%= @property.state%>, <%= @property.zip%></h4>
            <h4><%= @property.structure %></h4>
        </div>
      </div>
    </div>
    <div>
      <%# render partial: 'properties/property_show_carousel.html.erb', formats: [:html], locals: {property: @property} %>
      <%= image_tag @property.photos.first.url, class:"large-house-photo" %>

    </div>



    <br>
    <div>


      <div>
        <p><b>

        </b></p>
        <div>
          <div>
            <p>

            </p>

            <div>
              <div>

              </div>

            </div>
            <table style="margin: 0 auto;">
              <thead>
              <tr>
                <th style="padding: 10px;">Area </th>
                <th style="padding: 10px;">Rooms</th>
                <th style="padding: 10px;">Beds</th>
                <th style="padding: 10px;">Baths</th>
              </tr>

              </thead>
              <tbody>
              <tr>
                <td>2200</td>
                <td>12</td>
                <td><%= @property.beds.to_s + " " %></td>
                <td><%= @property.baths.to_s + " " %></td>
              </tr>
              </tbody>
            </table>


            <h4 style="text-transform: uppercase;
                font-weight: 600;
                border-bottom: 1px solid;">Description</h4>
            <hr>
            <p><%= @property.description %></p>
            <br>
            <center><%# render partial: 'more_info_prop_show' %></center>

            <h4>Details</h4>
            <hr>
            <div style="border: 1px solid;
                    padding: 10px;">


                <div>
                  <ul>
                    <li>Building Age: 2 years</li>
                    <li>Parking: Attached Garage</li>
                    <li>Heating: Oil</li>
                  </ul>
                </div>
                <div>
                  <ul>
                    <li>Cooling: Central</li>
                    <li>Sewer: Septic System</li>
                    <li>Water: Well</li>
                  </ul>
                </div>
                <div>
                  <ul>
                    <li>Foundation: Cement</li>
                    <li>Basement: Finished</li>
                    <li>Windows: New</li>
                  </ul>

                </div>
            </div>


          </div>
          <br>

        </div>

      </div>

      <h3>Find On Google</h3>
      <hr>
    </div>
    <br>
    <div>
      <div>
        <div>
          <div>

            <%# image_tag "https://maps.googleapis.com/maps/api/staticmap?center=#{@property.map_address}&zoom=14&size=640x600&markers=#{@property.map_address}&sensor=false" %>
          </div>

        </div>
      </div>
    </div>


    <div>
      <br>
      <br>

      <br>
      <h3>Moverable Stats</h3>
      <hr>
      <div>
        <div>
          <div>
            <div>
              This property has <%= pluralize(@property.favorites.count, 'favorite') %>!
            </div>
            <div>
              This property has <%= pluralize(@property.appointments.count, 'appointment') %>!
            </div>
            <div>
              This property has <%= pluralize(@property.comments.count, 'comment') %>!
            </div>
            <hr>
            <p> Listed <%= (Time.now.to_i - Time.at(@property.created_at.to_i).to_i) /60 /60 /24 %> Days Ago </p>
            <p>Moverable Time Price: <%= number_to_currency(@property.price - (@property.price * ((Time.now.to_i - Time.at(@property.created_at.to_i).to_i) /60 /60 /24 /30).to_f*(0.01)).to_i) %></p>

          </div>
        </div>
      </div>
    </div>

  </div>
</div>

