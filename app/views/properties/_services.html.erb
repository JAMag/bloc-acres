

<div class="panel panel-marketing col-md-12">
  <p>Here are 3rd party service providers that work in this house's zip code!</p>
  <br />
  <!--<div class="row">-->


    <% advertisements.each do |add| %>
        <div class="four columns">

          <% if add.zip === p.zip %>
              <div class="col-md-3">
                <div class="panel panel-default services">
                  <%= image_tag add.image.url, class: "profile-round" %>
                  <div class="row"></div>
                    <div class="advert-name">
                        <h4><%= add.advert_name %></h4>
                    </div>

                  <div class="footer__text">
                    <b>Profession: <%= add.profession %></b>
                  </div>
                  <br>
                  <div class="desc-services">
                    <p class="underline">Description of services:</p>
                    <br>
                    <br>
                    <p><%= add.description %></p>
                    <br>
                    <p class="footer__text">Service Zip: <%= add.zip %></p>
                    <p class="footer__text">House Zip: <%= p.zip %></p>
                    <br>
                    <div class="vouch">
                      <% if add.vouch %>
                          <i class="fa fa-star-o" aria-hidden="true"></i> <%= add.advert_name %> is vouched for!
                      <% end %>
                    </div>
                  </div>
                  <br>
                  Contact Info:
                  <i class="fa fa-phone header__contact-item__icon"></i><%= add.contact_info %>

                </div>
              </div>
          <% end %>

        </div>
    <% end %>
      <!--</div>-->
</div>
