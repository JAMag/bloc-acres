<% if user_signed_in? %>

      <% if favorite = current_user.favorited(p) %>
          <%= link_to [p, favorite], method: :delete do %>

              <span class="glyphicon glyphicon-heart" style="vertical-align:middle"></span>

          <% end %>


      <% else %>
          <%= link_to [p, Favorite.new], method: :post do %>

              <span class="glyphicon glyphicon-heart-empty" style="vertical-align:middle"></span>

          <% end %>
      <% end %>

<% end %>
